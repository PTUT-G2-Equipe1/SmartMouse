<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.f15003938.smartmouse.Telecommande">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="retour"
        android:id="@+id/retour"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="26dp" />


    <Button
        android:id="@+id/prec"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/suiv"
        android:layout_gravity="center"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:text="Précédent"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="428dp" />


    <Button
        android:id="@+id/suiv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:text="Suivant"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="428dp" />

    <Button
        android:id="@+id/quitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="top"
        android:text="Quitter"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="428dp" />

    <ProgressBar
        android:id="@+id/BarDiapo"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prec"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

    <Chronometer
        android:id="@+id/chronometer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/retour"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/demarrerChrono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chronometer2"
        android:layout_centerHorizontal="true"
        android:text="Démarrer" />

</RelativeLayout>
